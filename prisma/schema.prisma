generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dummyData {
  id       Int     @id @default(autoincrement())
  name     String
  username String?
}

model Company {
  id Int @id @default(autoincrement())
  name String
  users User[]
  items ComplianceItem[]
  documents Document[]
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  googleId String? @unique
  role String
  company Company @relation(fields: [companyId], references: [id])
  companyId Int
  createdAt DateTime @default(now())
  reminders Reminder[]
}

model ComplianceItem {
  id Int @id @default(autoincrement())
  title String
  description String?
  dueDate DateTime
  frequency String
  company Company @relation(fields: [companyId], references: [id])
  companyId Int
  reminders Reminder[]
  documents Document[]
}

model Document {
  id Int @id @default(autoincrement())
  name String
  fileUrl String
  expiryDate DateTime?
  company Company @relation(fields: [companyId], references: [id])
  companyId Int
  complianceItem ComplianceItem? @relation(fields: [itemId], references: [id])
  itemId Int?
}

model Reminder {
  id Int @id @default(autoincrement())
  type String
  scheduleAt DateTime
  sent Boolean @default(false)
  message String
  complianceItem ComplianceItem? @relation(fields: [itemId], references: [id])
  itemId Int?
  user User? @relation(fields: [userId], references: [id])
  userId Int?
}